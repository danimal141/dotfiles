[
  // toggle maximized panel when focusing terminal
  {
    "key": "cmd+shift+m",
    "command": "workbench.action.toggleMaximizedPanel",
    "when": "terminalFocus"
  },
  // Workspace Explorer shortcuts
  {
    "key": "cmd+shift+w",
    "command": "workspaceExplorer.focus"
  },
  // Collapse all folders in Explorer
  {
    "key": "cmd+shift+c",
    "command": "workbench.files.action.collapseExplorerFolders",
    "when": "explorerViewletVisible"
  }
]
