{
  "workbench.colorTheme": "Solarized Dark",
  "editor.minimap.enabled": false,
  "editor.fontFamily": "Source Han Code JP, Menlo, Monaco, 'Courier New', monospace",
  "editor.guides.indentation": false,
  "redhat.telemetry.enabled": true,
  "vs-kubernetes": {
    "vscode-kubernetes.helm-path-mac": "${HOME}/.vs-kubernetes/tools/helm/darwin-arm64/helm",
    "vscode-kubernetes.minikube-path-mac": "${HOME}/.vs-kubernetes/tools/minikube/darwin-arm64/minikube",
    "vs-kubernetes.minikube-show-information-expiration": "2025-02-12T22:50:37.220Z"
  },
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },
  "workbench.startupEditor": "none",
  "files.insertFinalNewline": true,
  "markdown.marp.exportType": "pptx",
  "markdown.marp.pdf.noteAnnotations": true,
  "editor.fontSize": 12,
  "terminal.integrated.fontSize": 12,
  "[ruby]": {
    "editor.semantic.enabled": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },
  "rubyLsp.pullDiagnosticsOn": "save",
  "files.trimTrailingWhitespace": true,
  "editor.tabSize": 2,
  "gitlens.telemetry.enabled": false,
  "workbench.activityBar.location": "hidden",
  "editor.occurrencesHighlight": "off",
  "security.workspace.trust.untrustedFiles": "open",
  "yaml.customTags": [
    "!And",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.formatOnSave": true
  },
  "workbench.iconTheme": "vscode-icons",
  "vsicons.dontShowNewVersionMessage": true,
  "roo-cline.allowedCommands": [
    "npm test",
    "npm install",
    "tsc",
    "git log",
    "git diff",
    "git show"
  ],
  "workspaceExplorer.workspaceStorageDirectory": "/usr/local/vscode/workspaces",
  "cline.preferredLanguage": "Japanese - 日本語",
  "rubyLsp.rubyVersionManager": "asdf",
  "rdbg.rubyVersionManager": "asdf",
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "scminput": false
  },
  "docker.extension.enableComposeLanguageServer": false
}
