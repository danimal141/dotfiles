{
  // Editor - General
  "editor.fontSize": 12,
  "editor.fontFamily": "Source Han Code JP, Menlo, Monaco, 'Courier New', monospace",
  "editor.tabSize": 2,
  "editor.minimap.enabled": false,
  "editor.guides.indentation": false,
  "editor.occurrencesHighlight": "off",

  // Workbench - UI
  "workbench.colorTheme": "Solarized Dark",
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "none",
  "workbench.activityBar.location": "hidden",

  // Terminal
  "terminal.integrated.fontSize": 12,

  // Files
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,

  // Security
  "security.workspace.trust.untrustedFiles": "open",

  // Language Specific - Ruby
  "[ruby]": {
    "editor.semantic.enabled": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },
  "rubyLsp.pullDiagnosticsOn": "save",
  "rubyLsp.rubyVersionManager": "asdf",
  "rdbg.rubyVersionManager": "asdf",

  // Language Specific - Python
  "[python]": {
    "editor.tabSize": 4
  },

  // Language Specific - Go
  "[go]": {
    "editor.tabSize": 4
  },

  // Language Specific - YAML
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.formatOnSave": true
  },
  "yaml.customTags": [
    "!And",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],

  // Extensions - GitHub Copilot
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "scminput": false
  },

  // Extensions - GitLens
  "gitlens.telemetry.enabled": false,

  // Extensions - VSCode Icons
  "vsicons.dontShowNewVersionMessage": true,

  // Extensions - Markdown
  "markdown.marp.exportType": "pptx",
  "markdown.marp.pdf.noteAnnotations": true,

  // Extensions - Kubernetes
  "vs-kubernetes": {
    "vscode-kubernetes.helm-path-mac": "${HOME}/.vs-kubernetes/tools/helm/darwin-arm64/helm",
    "vscode-kubernetes.minikube-path-mac": "${HOME}/.vs-kubernetes/tools/minikube/darwin-arm64/minikube",
    "vs-kubernetes.minikube-show-information-expiration": "2025-02-12T22:50:37.220Z"
  },

  // Extensions - Docker
  "docker.extension.enableComposeLanguageServer": false,

  // Extensions - Cline
  "cline.preferredLanguage": "Japanese - 日本語",

  // Extensions - Neovim
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // Extensions - Workspace Explorer
  "workspaceExplorer.workspaceStorageDirectory": "/usr/local/vscode/workspaces"
}
