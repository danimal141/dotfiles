{
  // Breadcrumbs
  "breadcrumbs.enabled": false,

  // Editor - General
  "editor.fontSize": 11,
  "editor.fontFamily": "Source Han Code JP, Menlo, Monaco, 'Courier New', monospace",
  "editor.tabSize": 2,
  "editor.codeLens": false,
  "editor.minimap.enabled": false,
  "editor.renderIndentGuides": false,
  "editor.renderWhitespace": "boundary",
  "editor.guides.bracketPairs": true,
  "editor.guides.indentation": false,
  "editor.detectIndentation": true,
  "editor.occurrencesHighlight": "off",
  "editor.suggestSelection": "first",
  "editor.acceptSuggestionOnEnter": "smart",
  "editor.snippetSuggestions": "top",
  "editor.wordWrap": "on",
  "editor.wordBasedSuggestions": true,
  "editor.defaultFormatter": null,

  // Workbench - UI
  "workbench.colorTheme": "Solarized Dark",
  "workbench.iconTheme": "vscode-icons",
  "workbench.startupEditor": "none",
  "workbench.activityBar.location": "hidden",

  // Terminal
  "terminal.integrated.fontSize": 11,

  // Files
  "files.insertFinalNewline": true,
  "files.trimTrailingWhitespace": true,
  "files.exclude": {
    "**/.DS_Store": true
  },

  // Security
  "security.workspace.trust.untrustedFiles": "open",

  // Language Specific - Ruby
  "[ruby]": {
    "editor.semantic.enabled": true,
    "editor.formatOnSave": true,
    "editor.formatOnType": true,
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.defaultFormatter": "Shopify.ruby-lsp"
  },
  "rubyLsp.pullDiagnosticsOn": "save",
  "rubyLsp.rubyVersionManager": "asdf",
  "rubyLsp.formatter": "auto",
  "rdbg.rubyVersionManager": "asdf",

  // Language Specific
  "[python]": {
    "editor.tabSize": 4,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "ms-python.python"
  },
  "[javascript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[typescript]": {
    "editor.tabSize": 2,
    "editor.formatOnSave": true,
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "[markdown]": {
    "editor.wordWrap": "on",
    "editor.quickSuggestions": {
      "comments": true,
      "strings": true,
      "other": true
    }
  },
  "[go]": {
    "editor.tabSize": 4
  },
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.insertSpaces": true,
    "editor.tabSize": 2,
    "editor.autoIndent": "advanced",
    "editor.formatOnSave": true
  },
  "yaml.customTags": [
    "!And",
    "!And sequence",
    "!If",
    "!If sequence",
    "!Not",
    "!Not sequence",
    "!Equals",
    "!Equals sequence",
    "!Or",
    "!Or sequence",
    "!FindInMap",
    "!FindInMap sequence",
    "!Base64",
    "!Join",
    "!Join sequence",
    "!Cidr",
    "!Ref",
    "!Sub",
    "!Sub sequence",
    "!GetAtt",
    "!GetAZs",
    "!ImportValue",
    "!ImportValue sequence",
    "!Select",
    "!Select sequence",
    "!Split",
    "!Split sequence"
  ],

  // Extensions - ESlint
  "eslint.validate": [
    "javascript",
    "javascriptreact",
    "typescript",
    "typescriptreact"
  ],

  // Extensions - GitHub Copilot
  "github.copilot.enable": {
    "*": true,
    "plaintext": false,
    "scminput": false
  },

  // Extensions - GitLens
  "gitlens.telemetry.enabled": false,
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.currentLine.over": "line",

  // Extensions - VSCode Icons
  "vsicons.dontShowNewVersionMessage": true,

  // Extensions - Markdown
  "markdown.marp.exportType": "pptx",
  "markdown.marp.pdf.noteAnnotations": true,

  // Extensions - Kubernetes
  "vs-kubernetes": {
    "vscode-kubernetes.helm-path-mac": "${HOME}/.vs-kubernetes/tools/helm/darwin-arm64/helm",
    "vscode-kubernetes.minikube-path-mac": "${HOME}/.vs-kubernetes/tools/minikube/darwin-arm64/minikube",
    "vs-kubernetes.minikube-show-information-expiration": "2025-02-12T22:50:37.220Z"
  },

  // Extensions - Docker
  "docker.extension.enableComposeLanguageServer": false,

  // Extensions - Cline
  "cline.preferredLanguage": "Japanese - 日本語",

  // Extensions - Neovim
  "extensions.experimental.affinity": {
    "asvetliakov.vscode-neovim": 1
  },

  // Extensions - Workspace Explorer
  "workspaceExplorer.workspaceStorageDirectory": "/usr/local/vscode/workspaces"
}
