# テーマ
theme = tokyonight

# フォント
# 英数字やASCII文字 → JetBrains Mono
# 日本語など、JetBrains Monoにない文字 → Source Han Code JP
font-family = JetBrains Mono
font-family = Source Han Code JP
font-size = 11

# 背景
background-opacity = 0.85
background-blur-radius = 20

# ウィンドウ内のパディング
window-padding-x = 4
window-padding-y = 4

# paddingを自動でバランス良く調整
window-padding-balance = true

# ウィンドウ状態を保存（終了時のサイズや位置を記憶）
window-save-state = always

# 新しいウィンドウのサイズ
window-width = 120
window-height = 40
